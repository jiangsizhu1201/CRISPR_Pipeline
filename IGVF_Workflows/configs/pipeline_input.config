params {
    DATASET_HASHING = 'true'
    
    user_inference = "example_data/user_pairs_to_test.csv"
    guide_metadata = "example_data/guide_metadata.tsv"
    hashing_metadata = "example_data/hash_metadata.tsv"

    transcriptome = 'human'
